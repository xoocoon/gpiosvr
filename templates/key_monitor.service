[Unit]
Description=monitor for key events
After=pi_server.service
Requires=pi_server.service

[Service]
Type=notify
ExecStart=/usr/local/bin/key_monitor --config=key_config.json --log=/var/log/key.log pi-sig-injector
TimeoutSec=60
Restart=on-failure
RestartSec=1

[Install]
WantedBy=pi_server.service
